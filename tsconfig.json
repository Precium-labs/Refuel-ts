{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": [
    "*.ts",
    "commands/**/*.ts",
    "mayan_route/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}